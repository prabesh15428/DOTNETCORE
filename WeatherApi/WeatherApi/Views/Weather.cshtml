
@model WeatherApi.Models.Weather
<div class="container">
    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <h2>Weather Forecast for the selected city</h2>

            <label asp-for="Name"></label>
            <span class="badge">@Model.Name</span>
            <br />

            <label asp-for="Temp"></label>
            <span class="basge">@Model.Temp</span>
            <br />

            <label asp-for="Humidity"></label>
            <span class="badge">@Model.Humidity</span>
            <br />

            <label asp-for="Pressure"></label>
            <span class="basge">@Model.Pressure </span>
            <br />

            <label asp-for="Wind"></label>
            <span class="badge">@Model.Wind</span>
            <br />

            <label asp-for="Weater"></label>
            <span class="basge">@Model.Weater</span>
            <br />
        </div>
    </div>

    <div class="container">
        <div class="form-group" col-md-offset-3 col-md-5>
            <form method="get">
                <button asp-controller="WeatherApi" asp-action="Search" class="btn btn-success">Return</button>
            </form>
        </div>
    </div>
</div>