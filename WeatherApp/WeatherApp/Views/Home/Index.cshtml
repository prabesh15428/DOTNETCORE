@{
    ViewBag.Title = "Weather";

}
<h1>Search City and Get Weather Forecast</h1>

<div>
    <strong>City Name  :</strong><input id="txtCity" type="text" />
    <br />
    <br />
    <button id="btnSubmit">Get Weather Forecast</button>
</div>


<div>
   
    <table>
        
        <tr>
            <td>
                <strong>City: </strong>
                <span id="lblCity"></span>  
               
            </td>
        </tr>
        <tr>
            <td>
                <strong>Country: </strong>
                <label id="lblCountry"></label><br />
                

            </td>
        </tr>
        <tr>
            <td>
                <strong>Temperature:</strong>
                <label id="lbltemp"></label><br />
                
            </td>
        </tr>
        


    </table>
</div>

<script>


    $("#btnSubmit").click(function () {

        var cityname = $("#txtCity").val();
        if (cityname.length > 0)
        {
        $.ajax({
            url: "https://api.weatherapi.com/v1/current.json?key=e79be1ff301249c4bf562139211911&q=London&aqi=no"+cityname,
            type: "POST",
            success: function (rsltval) {
                var data =JSON.parse(rsltval);
                console.log(data);
                $("#lblCity").html(data.City);
                $("#lblCountry").text(data.Country);
                $("#lbltemp").text(data.temp_c);
               
               
                
            },
            error: function () {

            }
        });
        }
        else
        {
            alert("City Not Found");
        }
    });

</script>    